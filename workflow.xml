<workflow-app name="MapReduce" xmlns="uri:oozie:workflow:0.4">
    <start to="MapReduce"/>
    <action name="MapReduce">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                  <delete path="${nameNode}/tmp/mapredOutput/"/>
            </prepare>
            <main-class>edu.rosehulman.mohan.MaxTemperature</main-class>
            <arg>${nameNode}/tmp/mapredInput/sample.txt</arg>
            <arg>${nameNode}/tmp/mapredOutput/</arg>
        </java>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
